@model CursoMVC.Models.IMCModel

@{
    ViewData["Title"] = "Calculadora IMC";
}

<center><h2>Calculadora IMC</h2></center>

<form asp-controller="Home" asp-action="IMC" method="post">

    <div class="form-group">

        <div class="row">
            <label asp-for="Nombre" class="col-lg-2"></label>
            <input asp-for="Nombre" class="col-lg-3" />
        </div>

        <div class="row">
            <label asp-for="Sexo" class="col-lg-2"></label>
            <select asp-for="Sexo" class="col-lg-3">
                <option value="">Seleccione</option>
                <option value="Hombre">Hombre</option>
                <option value="Mujer">Mujer</option>
            </select>
        </div>

        <div class="row">
            <label asp-for="Edad" class="col-lg-2"></label>
            <input asp-for="Edad" type="number" class="col-lg-3" />
        </div>

        <div class="row">
            <label asp-for="Peso" class="col-lg-2"></label>
            <input asp-for="Peso" type="number" step="0.01" class="col-lg-3" />
        </div>

        <div class="row">
            <label asp-for="Altura" class="col-lg-2"></label>
            <input asp-for="Altura" type="number" step="0.01" class="col-lg-3" />
        </div>

        <div>
            <input type="submit" value="Calcular IMC" class="btn btn-success col-lg-2" />
        </div>

        @if (Model != null && Model.ResultadoIMC > 0)
        {
            <div class="alert alert-info mt-3">
                <strong>Hola @Model.Nombre</strong>, tu IMC es: <strong>@Model.ResultadoIMC.ToString("0.00")</strong>
            </div>
        }

    </div>

</form>
