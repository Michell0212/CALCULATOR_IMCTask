@model CALCULATOR_IMCTask.Models.IMCModel

@{
    ViewData["Title"] = "Calculadora IMC";
}

<h2 class="text-center">Calculadora IMC</h2>

<form asp-action="IMC" method="post" class="mt-4">

    <div class="form-group mb-3">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Peso"></label>
        <input asp-for="Peso" class="form-control" type="number" step="0.1" />
        <span asp-validation-for="Peso" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Altura"></label>
        <input asp-for="Altura" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Altura" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Calcular</button>
</form>

@if (Model != null && Model.ResultadoIMC > 0)
{
    <div class="alert alert-info mt-4">
        <h4>@ViewBag.Mensaje <strong>@Model.ResultadoIMC.ToString("0.00")</strong></h4>
    </div>
}